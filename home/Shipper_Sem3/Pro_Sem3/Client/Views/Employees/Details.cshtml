        <div class="row" style="margin:20px 20px 20px 450px">
            <div class="col-md-2" style="display:flex;justify-content:flex-start">
                @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                <p>
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @style = "width:80%;display:none" }, @readonly = true })
                    @Model.username
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </p>
            </div>
        </div>
    </div>
