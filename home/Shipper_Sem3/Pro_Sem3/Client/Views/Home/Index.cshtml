<!-- banner bottom -->
<section class="banner-btm">
    <div class="container">
        <div class="row banner-bottom-main">

            <div class="col-md-4 banner-grid2">
                <div class="banner-subg1">
                    <span class="fa   fa-shipping-fast" aria-hidden="true"></span>
                    <h3 class="mt-3">Charges Service</h3>
                    <p class="mt-3 mb-3" style="text-align: left;">
                        <div class="container">
                            District 1,2,3,4,5,6,7,8 – 20,000 vnđ </br>
                            District 9,10,11,12 – 25,000 vnđ </br>
                            Weight(gram) :</br>
                            . Under 200 gr : 25,000 vnđ</br>
                            . 200 gr – 500 gr : 35,000 vnđ</br>
                            . 500 gr – 1000 gr : 45,000 vnđ</br>
                            . 1000 gr – 1500 gr : 60,000 vnđ</br>
                            . Each next 500 gr :  10,000 vnđ</br>

                            Height(cm) :</br>
                            . Under 2cm : 5,000 vnđ </br>
                            . 2cm - 10cm : 10,000 vnđ </br>
                            . 10cm - 20cm : 15,000 vnđ </br>
                            . 20cm - 50cm : 25,000 vnđ </br>
                            . Each next 20cm : 20,000 vnđ </br>

                            Width(cm) : </br>
                            . Under 5cm : 5,000 vnđ</br>
                            . 5cm - 10cm : 10,000 vnđ </br>
                            . 10cm - 20cm : 20,000 vnđ </br>
                            . 20cm - 50cm : 45,000 vnđ </br>
                            . Each next 10cm : 10,000 vnđ </br>
                            VAT 10%
                        </div>
                    </p>


                </div>
            </div>
            <div class="col-md-4 banner-grid2">
                <div class="banner-subg1">
                    <span class="fas fa-box-open fa-5x" aria-hidden="true"></span>

                    <h3 class="mt-3">Create Order</h3>
                    <p class="mt-3 mb-3">
                        The products the customer wants to pack
                    </p>

                    <div class="read-btn">
                        <input type="button" style="color: #252424;display: inline-block;text-decoration: none;padding: 4px 16px;font-size: 18px;font-weight: 600;letter-spacing: 2px;text-transform: capitalize;background: #ffdc39;border: 2px solid #ffdc39;transition: .5s ease-in;-webkit-transition: .5s ease-in;-moz-transition: .5s ease-in;-o-transition: .5s ease-in;-ms-transition: .5s ease-in;border-radius: 0px;" value="Start" onclick="location.href='@Url.Action("Create","bills")'"/>
                        @*<a href="">Start</a>*@
                    </div>
                </div>
            </div>
            <div class="col-md-4 banner-btmg">
                <div class="banner-btmg1">
                    <div class="form-text">
                        <h3 class="text-center">Login</h3>
                    </div>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class="banner_form"}))
                    {

                         <form action="./Login" method="post" class="banner_form">
                        <div class="sec-left">
                            <label class="contact-form-text">Username</label>
                            <p><input type="text" placeholder="User Name" required id="userName" name="userName"style="padding: 0.6em 0.8em;color: #000;width: 100%;font-size: 15px;outline: none;border: 1px solid #c5c0c0;background: #f5f5f5;font-weight: 400;" /></p>
                        </div>
                        <div class="sec-right">
                            <label class="contact-form-text">Password</label>
                            <p>
                                <input type="password" placeholder="password" required id="passWord" name="passWord" style="padding: 0.6em 0.8em;color: #000;width: 100%;font-size: 15px;outline: none;border: 1px solid #c5c0c0;background: #f5f5f5;font-weight: 400;"/>
                            </p>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit" value="submit" style="width: 100%;text-transform: uppercase;outline: none;cursor: pointer;color: #000000;font-size: 1em;font-weight: 600;padding: 0.5em 0;letter-spacing: 1px;border: none;background: #ffdc39;margin-top: 20px;" />
                            </div>
                            <div class="col-md-6">
                                <input type="button" value="Signup" onclick="location.href='@Url.Action("Signup","Home")'" style="width: 100%;text-transform: uppercase;outline: none;cursor: pointer;color: #000000;font-size: 1em;font-weight: 600;padding: 0.5em 0;letter-spacing: 1px;border: none;background: #ffdc39;margin-top: 20px;" />
                            </div>
                        </div>
                        
                        </form>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

