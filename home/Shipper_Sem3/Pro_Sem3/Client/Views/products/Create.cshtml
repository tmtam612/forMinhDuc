@model List<Client.Models.product>

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int n = ViewBag.quantity;
   
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().proID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().height)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().lenght)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().weight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().width)
                    </th>
                </tr>
                @for (int i = 0; i < Model.Count(); i++)
                {
                <tr>
                    <td>
                        @Html.EditorFor(m => m[i].proID, new { htmlAttributes = new { @style = "width:70px; display: none", @readonly = true } })
                        @Model[i].proID
                    </td>
                    <td>
                        @Html.EditorFor(m => m[i].name, new { htmlAttributes = new { @style = "width:70px; display: none", @required = true } })
                    </td>
                    <td>
                        @Html.EditorFor(m => m[i].height, new { htmlAttributes = new { @style = "width:70px; display: none", @required = true } })
                    </td>
                    <td>
                        @Html.EditorFor(m => m[i].lenght, new { htmlAttributes = new { @style = "width:70px; display: none", @required = true } })
                    </td>
                    <td>
                        @Html.EditorFor(m => m[i].weight, new { htmlAttributes = new { @style = "width:70px; display: none", @required = true } })
                    </td>
                    <td>
                        @Html.EditorFor(m => m[i].width, new { htmlAttributes = new { @style = "width:70px; display: none", @required = true } })
                    </td>
                </tr>

                }
            </table>
            <div class="form-group">
                <p align="right">
                    <input type="submit" value="Create" class="btn btn-success" />
                </p>
            </div>
        </div>
    </div>
}
