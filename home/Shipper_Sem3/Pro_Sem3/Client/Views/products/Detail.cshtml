@model List<Client.Models.product>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal" style="margin:auto;margin-top:20px;margin-bottom:20px;width:90%;border:double">
    <h4 style="text-align:center;margin:20px 20px 20px 20px">Products</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <table class="table">
            <tr>
                <th style="color:black;font-weight:bold">
                    <strong>@Html.DisplayNameFor(model => model.First().name)</strong>
                </th>
                <th style="color:black;font-weight:bold">
                    <strong>@Html.DisplayNameFor(model => model.First().description)</strong>
                </th>
                <th style="color:black;font-weight:bold">
                    <strong>@Html.DisplayNameFor(model => model.First().height)</strong>
                </th>
                <th style="color:black;font-weight:bold">
                    <strong>@Html.DisplayNameFor(model => model.First().lenght)</strong>
                </th>
                <th style="color:black;font-weight:bold">
                    <strong>@Html.DisplayNameFor(model => model.First().weight)</strong>
                </th>
                <th style="color:black;font-weight:bold">
                    <strong>@Html.DisplayNameFor(model => model.First().width)</strong>
                </th>
            </tr>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td style="color:black">
                        @Html.EditorFor(m => m[i].name, new { htmlAttributes = new { @style = "width:100%;display:none", @readonly = true } })
                        @Model[i].name
                    </td>
                    <td style="color:black">
                        @Html.EditorFor(m => m[i].description, new { htmlAttributes = new { @style = "width:100%;display:none", @readonly = true } })
                        @Model[i].description
                    </td>
                    <td style="color:black">
                        @Html.EditorFor(m => m[i].height, new { htmlAttributes = new { @style = "width:70px;display:none", @readonly = true } })
                        @Model[i].height
                    </td>
                    <td style="color:black">
                        @Html.EditorFor(m => m[i].lenght, new { htmlAttributes = new { @style = "width:70px;display:none", @readonly = true } })
                        @Model[i].lenght
                    </td>
                    <td style="color:black">
                        @Html.EditorFor(m => m[i].weight, new { htmlAttributes = new { @style = "width:70px;display:none", @readonly = true } })
                        @Model[i].weight
                    </td>
                    <td style="color:black">
                        @Html.EditorFor(m => m[i].width, new { htmlAttributes = new { @style = "width:70px;display:none", @readonly = true } })
                        @Model[i].width
                    </td>
                </tr>

            }
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12" style="display:flex;justify-content:center">
                <input type="submit" value="Back to List" class="btn btn-info" onclick="location.href='@Url.Action("Index","bills")'"/>
            </div>
        </div>
    </div>
</div>

